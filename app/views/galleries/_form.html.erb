<%= form_for @photo, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @photo.errors[:title].any? %>">
      <%= f.label :title, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @photo, field_name: :title %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @photo.errors[:image].any? %>">
      <%= f.label :image, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image %>
        <%= render 'shared/field_errors', object: @photo, field_name: :image %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>